{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "paths": {
      "@/*": ["./*"],
      "@_types/*": ["./types/*"],
      "@util/*": ["./util/*"],
      "@hooks/*": ["./hooks/*"],
      "@blocks/*": ["./blocks/*"],
      "@elements/*": ["./elements/*"],
      "@layout/*": ["./layout/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
